#!/usr/bin/env bash

# Backup the original /etc/hosts file
sudo cp /etc/hosts /etc/hosts.bak

# Modify /etc/hosts to resolve localhost to 127.0.0.2
# and facebook.com to 8.8.8.8
sudo sed -i '/127.0.0.1\s\+localhost/d' /etc/hosts
echo "127.0.0.2 localhost" | sudo tee -a /etc/hosts
echo "8.8.8.8 facebook.com" | sudo tee -a /etc/hosts

echo "Changes applied. /etc/hosts now resolves:"
echo "localhost to 127.0.0.2"
echo "facebook.com to 8.8.8.8"
